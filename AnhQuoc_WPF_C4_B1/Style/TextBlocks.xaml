<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnhQuoc_WPF_C4_B1">

    <Style x:Key="tblGeneral" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="tblStyle1" TargetType="TextBlock" BasedOn="{StaticResource tblGeneral}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5" />
    </Style>
    <Style x:Key="tblPlaceHolder" TargetType="TextBlock" BasedOn="{StaticResource tblGeneral}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="LightGray" />
    </Style>
</ResourceDictionary>